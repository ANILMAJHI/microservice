package com.config.boot.profileBean;

import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.stereotype.Component;

@Component
@ConfigurationProperties(prefix = "db")
public class ConnectionManager {

	private String driverClassname;
	private String url;
	private String username;
	private String passsword;

	public ConnectionManager() {
		super();
	}

	public ConnectionManager(String driverClassname, String url, String usermame, String passsword) {
		super();
		this.driverClassname = driverClassname;
		this.url = url;
		this.usermame = usermame;
		this.passsword = passsword;
	}

	public String getDriverClassname() {
		return driverClassname;
	}

	public void setDriverClassname(String driverClassname) {
		this.driverClassname = driverClassname;
	}

	public String getUrl() {
		return url;
	}

	public void setUrl(String url) {
		this.url = url;
	}

	public String getUsermame() {
		return usermame;
	}

	public void setUsermame(String usermame) {
		this.usermame = usermame;
	}

	public String getPasssword() {
		return passsword;
	}

	public void setPasssword(String passsword) {
		this.passsword = passsword;
	}

	@Override
	public String toString() {
		return "ConnectionManager [driverClassname=" + driverClassname + ", url=" + url + ", usermame=" + usermame
				+ ", passsword=" + passsword + "]";
	}

}
